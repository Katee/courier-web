= simple_form_for(@location, :html => { :class => "form-horizontal" } ) do |f|

  .form-inputs
    = f.input :name
    = f.input :address
    = f.input :city
    = f.input :postal
    = f.input :state
    = f.input :country

    - if action_name == "edit"
      .control-group.hidden
        .controls
          %a{ :"data-toggle" => "collapse", :"data-target" => "#admin-location-options", :href => "#"}
            Advanced Fields
        %div#admin-location-options.collapse
          = f.input :lat
          = f.input :lng

  .form-actions
    = f.button :submit, :class => "btn btn-primary"
    or
    = link_to "Cancel", :back
