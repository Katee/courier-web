- content_for :head do
  = javascript_include_tag "locations/show"

.navbar.navbar-static-top.navbar-transparent
  .navbar-inner
    .container
      .brand Location: #{@location.name}
      .btn-group.pull-right
        = link_to 'Edit', edit_location_path(@location), :class => "btn btn-primary"

.row-fluid
  #map.span3{ :"data-lat" => @location.lat, :"data-lng" => @location.lng }
    .loading Loading map

  .span9
    %address
      = @location.address
      %br
      = [ @location.city, @location.state, @location.postal ].join(', ')


