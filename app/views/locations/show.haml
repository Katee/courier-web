- content_for :head do
  = javascript_include_tag "locations/show"

.row-fluid
  .span4
    #map{ :"data-lat" => @location.lat, :"data-lng" => @location.lng }
      .loading Loading map

  .span8
    .navbar.navbar-static-top.navbar-transparent
      .navbar-inner
        .brand Location: #{@location.name}
        .btn-group.pull-right
          = link_to 'Edit', edit_location_path(@location), :class => "btn btn-primary"

    %address
      = @location.address
      %br
      = [ @location.city, @location.state, @location.postal ].reject(&:blank?).join(', ')


